<?xml version="1.0" encoding="utf-8" ?>
<Defs>
mono
  <!-- MARINES TRAIT (Marine + Corpsman degrees) -->
  <TraitDef>
    <defName>Marines</defName>
    <!-- Overall chance; degree commonalities split Marine/Corpsman -->
    <commonality>0.03</commonality>
    <degreeDatas>

      <!-- Degree 1: Marine -->
      <li>
        <degree>1</degree>
        <label>Marine</label>
        <description>
          {PAWN_nameDef} is a Marine, engineered for brutal frontline combat and extreme environments.
        </description>

        <!-- Relative chance within this trait (1 part Marine) -->
        <commonality>1</commonality>

        <statOffsets>
          <!-- Extreme temperature survival -->
          <ComfyTemperatureMin>-100</ComfyTemperatureMin>
          <ComfyTemperatureMax>200</ComfyTemperatureMax>

          <!-- No chance of mental break -->
          <MentalBreakThreshold>-213</MentalBreakThreshold>

          <!-- Massive carry capacity -->
          <CarryingCapacity>2500</CarryingCapacity>

          <!-- Work / move / learn 200% faster than base (3x total) -->
          <WorkSpeedGlobal>2.0</WorkSpeedGlobal>
          <GlobalLearningFactor>2.0</GlobalLearningFactor>
          <MoveSpeed>2.0</MoveSpeed>
		  
          <!-- Research scaling: 3x base -->
          <ResearchSpeed>2.0</ResearchSpeed>

          <!-- Slightly reduced hunger (still mostly normal) -->
          <!-- <HungerRateMultiplier>-0.15</HungerRateMultiplier> -->

          <!-- Combat: very strong but below War Hero -->
          <AimingDelayFactor>-0.4</AimingDelayFactor>
          <ShootingAccuracyPawn>0.5</ShootingAccuracyPawn>
          <MeleeHitChance>0.4</MeleeHitChance>

          <!-- Defense: tough frontline tank -->
          <ArmorRating_Sharp>1.0</ArmorRating_Sharp>
          <ArmorRating_Blunt>1.0</ArmorRating_Blunt>
          <ArmorRating_Heat>1.0</ArmorRating_Heat>
          <IncomingDamageFactor>-0.5</IncomingDamageFactor>

          <!-- Disease / toxin resilience -->
          <ImmunityGainSpeed>1.0</ImmunityGainSpeed>
          <InjuryHealingFactor>1.0</InjuryHealingFactor>
          <ToxicResistance MayRequire="Ludeon.RimWorld.Biotech">1.0</ToxicResistance>
          <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">1.0</ToxicEnvironmentResistance>
        </statOffsets>

        <!-- Stacks on top of your gene skill templates -->
        <skillGains>
          <Melee>6</Melee>
          <Shooting>6</Shooting>
        </skillGains>
      </li>

      <!-- Degree 2: Corpsman -->
      <li>
        <degree>2</degree>
        <label>Corpsman</label>
        <description>
          {PAWN_nameDef} is a Corpsman, engineered for battlefield medicine and survival in any conditions.
        </description>

        <!-- Relative chance within this trait (2 parts Corpsman) -->
        <commonality>2</commonality>

        <statOffsets>
          <!-- Extreme temperature survival -->
          <ComfyTemperatureMin>-100</ComfyTemperatureMin>
          <ComfyTemperatureMax>200</ComfyTemperatureMax>

          <!-- No chance of mental break -->
          <MentalBreakThreshold>-213</MentalBreakThreshold>

          <!-- High carry capacity, but below Marine -->
          <CarryingCapacity>1000</CarryingCapacity>

          <!-- Work / move / learn 100% faster than base (2x total) -->
          <WorkSpeedGlobal>1.0</WorkSpeedGlobal>
          <GlobalLearningFactor>1.0</GlobalLearningFactor>
          <MoveSpeed>1.0</MoveSpeed>
          <!-- Research scaling: 2x base -->
          <ResearchSpeed>1.0</ResearchSpeed>

          <!-- Slightly reduced hunger (near base) -->
          <!-- <HungerRateMultiplier>-0.1</HungerRateMultiplier> -->

          <!-- Combat: competent, not pure frontliner -->
          <AimingDelayFactor>-0.2</AimingDelayFactor>
          <ShootingAccuracyPawn>0.3</ShootingAccuracyPawn>
          <MeleeHitChance>0.2</MeleeHitChance>

          <!-- Defense: solid but under Marine -->
          <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
          <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
          <ArmorRating_Heat>0.5</ArmorRating_Heat>
          <IncomingDamageFactor>-0.25</IncomingDamageFactor>

          <!-- Disease / toxin resilience, scaled under Marine -->
          <ImmunityGainSpeed>0.5</ImmunityGainSpeed>
          <InjuryHealingFactor>0.5</InjuryHealingFactor>
          <ToxicResistance MayRequire="Ludeon.RimWorld.Biotech">0.5</ToxicResistance>
          <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.5</ToxicEnvironmentResistance>

          <!-- Medical-focused bonuses -->
          <MedicalTendSpeed>0.5</MedicalTendSpeed>
          <MedicalTendQuality>0.2</MedicalTendQuality>
          <MedicalOperationSpeed>0.5</MedicalOperationSpeed>
        </statOffsets>

        <skillGains>
          <Melee>6</Melee>
          <Shooting>6</Shooting>
          <Medicine>8</Medicine>
        </skillGains>
      </li>

      <li>
        <degree>3</degree>
        <label>War Hero</label>
        
        <!-- Relative chance within this trait (0 parts War Hero) -->
        <commonality>0</commonality>

        <description>
          An apex engine of war. Nearly unkillable, impossibly fast, and terrifyingly precise.
        </description>
        <statOffsets>
          <!-- Extreme temperature survival to match Marine/Corpsman -->
          <ComfyTemperatureMin>-100</ComfyTemperatureMin>
          <ComfyTemperatureMax>200</ComfyTemperatureMax>

          <!-- No chance of mental break -->
          <MentalBreakThreshold>-213</MentalBreakThreshold>

          <!-- Carry capacity 5000 as requested -->
          <CarryingCapacity>5000</CarryingCapacity>

          <!-- IMPORTANT: Rest stays vanilla (no RestRateMultiplier / RestFallRateFactor here) -->

          <!-- Slightly reduced hunger (still mostly normal) -->
          <!-- <HungerRateMultiplier>-0.2</HungerRateMultiplier> -->

          <!-- COMBAT: better than Marines -->
          <AimingDelayFactor>-0.75</AimingDelayFactor>
          <ShootingAccuracyPawn>1.0</ShootingAccuracyPawn>
          <MeleeHitChance>0.5</MeleeHitChance>

          <!-- DEFENSE: ultra tank -->
          <ArmorRating_Sharp>2.5</ArmorRating_Sharp>
          <ArmorRating_Blunt>2.5</ArmorRating_Blunt>
          <ArmorRating_Heat>2.5</ArmorRating_Heat>
          <IncomingDamageFactor>-0.9</IncomingDamageFactor>

          <!-- TOXIC IMMUNITY & RESISTANCE (kept maxed) -->
          <ToxicResistance MayRequire="Ludeon.RimWorld.Biotech">9999</ToxicResistance>
          <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">9999</ToxicEnvironmentResistance>

          <!-- Psychic hard-counter -->
          <PsychicSensitivity>-1</PsychicSensitivity>

          <!-- APOTHEOSIS-LEVEL WORK / SPEED / LEARNING (as you had) -->
          <WorkSpeedGlobal>9999</WorkSpeedGlobal>
          <GlobalLearningFactor>999999</GlobalLearningFactor>
          <MoveSpeed>500</MoveSpeed>
          <ResearchSpeed>9999</ResearchSpeed>

          <!-- Healing & survivability, scaled above Marine -->
          <ImmunityGainSpeed>8</ImmunityGainSpeed>
          <InjuryHealingFactor>8</InjuryHealingFactor>
          <MedicalOperationSpeed>20</MedicalOperationSpeed>
          <PainShockThreshold>10</PainShockThreshold>
        </statOffsets>

        <skillGains>
          <Melee>30</Melee>
          <Shooting>30</Shooting>
        </skillGains>
      </li>

    </degreeDatas>
  </TraitDef>
</Defs>
