<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- GENE: Marine - matches Marine trait -->
  <GeneDef>
    <defName>MarineCorps_Marine</defName>
    <label>marine corps genome (marine)</label>
    <labelShortAdj>marine</labelShortAdj>
    <description>
      This archite gene rewrites the subject's physiology and psychology to match the Marine Corps "Marine" profile.
      Carriers gain the Marine trait, becoming terrifying frontline badasses.
    </description>

    <iconPath>UI/Icons/Genes/MarineGene</iconPath>

    <displayCategory>Archite</displayCategory>
    <displayOrderInCategory>500</displayOrderInCategory>

    <biostatCpx>6</biostatCpx>
    <biostatMet>4</biostatMet>
    <biostatArc>3</biostatArc>

    <!-- NEW: class for Marine skill template -->
    <geneClass>MarineCorpsTraits.Gene_Marine</geneClass>

    <!-- Forces Marines (degree 1 = Marine) -->
    <forcedTraits>
      <li>
        <def>Marines</def>
        <degree>1</degree>
      </li>
    </forcedTraits>

    <customEffectDescriptions>
      <li>Forces the Marines trait (degree: Marine).</li>
      <li>Sets core combat and work skills to elite Marine levels.</li>
    </customEffectDescriptions>
  </GeneDef>



  <!-- GENE: Corpsman - matches Corpsman trait -->
  <GeneDef>
    <defName>MarineCorps_Corpsman</defName>
    <label>marine corps genome (corpsman)</label>
    <labelShortAdj>corpsman</labelShortAdj>
    <description>
      This archite gene rewires the subject to match the Marine Corps "Corpsman" profile.
      Carriers gain the Corpsman variant of the Marines trait, excelling at battlefield medicine.
    </description>

    <iconPath>UI/Icons/Genes/CorpsmanGene</iconPath>

    <displayCategory>Archite</displayCategory>
    <displayOrderInCategory>501</displayOrderInCategory>

    <biostatCpx>6</biostatCpx>
    <biostatMet>4</biostatMet>
    <biostatArc>3</biostatArc>

    <!-- NEW: class for Corpsman skill template -->
    <geneClass>MarineCorpsTraits.Gene_Corpsman</geneClass>

    <!-- Forces Marines trait (degree 2 = Corpsman) -->
    <forcedTraits>
      <li>
        <def>Marines</def>
        <degree>2</degree>
      </li>
    </forcedTraits>

    <customEffectDescriptions>
      <li>Forces the Marines trait (degree: Corpsman).</li>
      <li>Sets medical and support skills to elite Corpsman levels.</li>
    </customEffectDescriptions>
  </GeneDef>



  <!-- GENE: War Hero - matches War Hero trait -->
  <GeneDef>
    <defName>MarineCorps_WarHero</defName>
    <label>war hero genome</label>
    <labelShortAdj>war hero</labelShortAdj>
    <description>
      An archite super-soldier genome. Carriers gain the War Hero trait, becoming nearly unkillable juggernauts
      capable of reshaping the battlefield single-handedly.
    </description>

    <iconPath>UI/Icons/Genes/WarHeroGene</iconPath>

    <displayCategory>Archite</displayCategory>
    <displayOrderInCategory>502</displayOrderInCategory>

    <biostatCpx>8</biostatCpx>
    <biostatMet>5</biostatMet>
    <biostatArc>4</biostatArc>

    <!-- NEW: class for War Hero skill template -->
    <geneClass>MarineCorpsTraits.Gene_WarHero</geneClass>

    <!-- Force War Hero trait -->
    <forcedTraits>
      <li>
        <def>Marines</def>
        <degree>3</degree>
      </li>
    </forcedTraits>

    <customEffectDescriptions>
      <li>Forces the War Hero trait.</li>
      <li>Sets all skills to superhuman War Hero levels.</li>
      <li>Overwrites prior Marine/Corpsman/War Hero traits.</li>
    </customEffectDescriptions>
  </GeneDef>



</Defs>
